<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/rootFL"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Text-->
        <RelativeLayout
            android:id="@+id/textTypeParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            tools:visibility="gone">

            <TextView
                android:id="@+id/textTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_bot_button_text_bg"
                android:padding="10dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <!--Image-->
        <RelativeLayout
            android:id="@+id/imageTypeParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageTypeIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@drawable/default_chatbubble"
                tools:background="#e4e4e4"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/imagePb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:visibility="gone" />

        </RelativeLayout>

        <!--Text & Image-->
        <RelativeLayout
            android:id="@+id/textImageTypeParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textImageTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/chat_bot_button_text_bg"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="50dp"
                android:paddingBottom="10dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/textImageTypeIv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textImageTitleTv"
                android:layout_alignEnd="@id/textImageTitleTv"
                android:layout_alignBottom="@id/textImageTitleTv"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-4dp"
                android:src="@drawable/default_chatbubble"
                tools:background="#e4e4e4" />

            <ProgressBar
                android:id="@+id/textImagePb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/textImageTypeIv"
                android:layout_alignTop="@id/textImageTypeIv"
                android:layout_alignEnd="@id/textImageTypeIv"
                android:layout_alignBottom="@id/textImageTypeIv"
                android:layout_centerInParent="true"
                tools:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>
</layout>