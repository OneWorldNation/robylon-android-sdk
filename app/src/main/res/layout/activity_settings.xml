<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            tools:context=".SettingsActivity">

           <CheckBox
               android:id="@+id/isProdCb"
               android:layout_width="wrap_content"
               android:text="IsProd"
               android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/orgIdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Org Id" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userIdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="User Id" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userTokenEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="User Token" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userProfileEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="User Profile" />


            <Button
                android:id="@+id/launchAIChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="Launch AI Chat" />

        </LinearLayout>
    </ScrollView>

</layout>